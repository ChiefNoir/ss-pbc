  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "Endpoint": "http://localhost:5000",
  "Token": {
    "Audience": "Audience-1",
    "Issuer": "IssuerName",
    "Key": "1234567890123456",
    "LifeTime": "30",
    "RequireExpirationTime": "true",
    "RequireHttpsMetadata": "false", // "false" is only for development
    "Scheme": "SchemeName",
    "SecurityAlgorithms": "HS256", //look up SecurityAlgorithms for values
    "ValidateAudience": "true",
    "ValidateIssuer": "true",
    "ValidateIssuerSigningKey": "true",
    "ValidateLifetime": "true",
    "ClockSkewMinutes": "1"
  },
  "Default": {
    // Admin: Works one time only with empty database
    "Admin": {
      "Login": "sa",
      "Password": "sa"
    }
  },
  "Security": {
    "Key": "1234567890"
  },
  "Location": {
    "FileStorage": "/files",
    "StaticFilesRequestPath": "/static",
    "MaxFileSizeBytes": "10485760" //10Mb
  },
  "ConnectionStrings": {
    "Default": "Server=127.0.0.1;Port=5432;Database=storage;UserId=service;Password=sa;"
  },
  "AllowedHosts": "*"
}
